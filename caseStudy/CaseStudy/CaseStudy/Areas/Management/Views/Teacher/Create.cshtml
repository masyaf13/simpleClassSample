@model Teacher

<h3 class="text-center"> Yeni Öğretmen Ekleme Sayfası </h3>
<div asp-validation-summary="All">

</div>
<form method="post" asp-controller="Teacher" asp-action="Create" asp-area="Management">
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">İsim</label>
        <input type="text" style='text-transform:uppercase' class="form-control" asp-for="FirstName"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
     <div class="mb-3">
        <label class="form-label" asp-for="LastName">Soyisim</label>
        <input type="text" style='text-transform:uppercase' class="form-control" asp-for="LastName"/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
  <!--  
    -->
      
    
    <button type="submit" class="btn btn-primary">Kaydet</button>

</form>


