@model ClassRoom

<h3 class="text-center"> Yeni Sınıf Ekleme Sayfası </h3>
@if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }
<form method="post" asp-controller="ClassRoom" asp-area="Management" asp-action="Create">
    <div class="mb-3">
        <label class="form-label" asp-for="ID">Sınıf Adı</label>
        <input type="text" class="form-control" asp-for="ID"/>
        <span asp-validation-for="ID" class="text-secondary"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>

</form>